<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog - Ekip Portföy</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/header') %>
    <main class="blog-main">
      <section class="blog-section">
        <h2>Blog Yazıları</h2>
        <div class="blog-grid">
          <% blogs.forEach(blog => { %>
          <div class="blog-card">
            <h3><%= blog.title.substring(0, 30) %>...</h3>
            <p class="blog-snippet"><%= blog.content.substring(0, 30) %>...</p>
            <p class="blog-author">Yazar: <%= blog.author %></p>
            <p class="blog-date">
              Yayınlanma Tarihi: <%= new Intl.DateTimeFormat('tr-TR', { year:
              'numeric', month: 'long', day: 'numeric' }).format(blog.createdAt)
              %>
            </p>
            <a href="/blogs/<%= blog._id %>" class="btn-read-more"
              >Devamını Oku</a
            >
          </div>
          <% }); %>
        </div>
      </section>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
